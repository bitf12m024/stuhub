@{
    ViewBag.Title = "dashboards";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Admin</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/admin/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="~/Content/admin/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet" />
    <!-- DataTables CSS -->
    <link href="~/Content/admin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="~/Content/admin/bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/admin/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/admin/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Students Hub</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                       
                        <li class="divider"></li>
                        <li><a href="/Home/logoff"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href=""><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                        <li>
                            <a href="/Home/"><i class="fa fa-dashboard fa-fw"></i> Live View</a>
                        </li>
                       @{
                           if(Session["role"] != null){
                           int role = (int)(Session["role"]);
                               if (role==2){
                                    <li>
                            <a href="/university/"><i class="fa fa-edit fa-fw"></i> Institutes Added</a>
                        </li>
                            <li>
                            <a href="/university/"><i class="fa fa-edit fa-fw"></i> Applications Received</a>
                        </li>
                           
                               }
                               else if (role == 1)
                               {
                          <li>
                            <a href="#"><i class="fa fa-wrench fa-fw"></i> Users<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Dashboard/stu">Students</a>
                                </li>
                                <li>
                                    <a href="/Dashboard/rep">Representatives</a>
                                </li>
                                <li>
                                    <a href="/Dashboard/admin">Admins</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="/university/"><i class="fa fa-edit fa-fw"></i> Institutes</a>
                        </li>
                       <li>
                            <a href="#"><i class="fa fa-sitemap fa-fw"></i> Representatives<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/Dashboard/apps">Applications</a>
                                </li>
                            <li>
                                    <a href="#">Reviews <span class="fa arrow"></span></a>
                                    <ul class="nav nav-third-level">
                                        <li>
                                             @Html.ActionLink("Published", "reviews", new {ch=2})
                                        </li>
                                        <li>
                                              @Html.ActionLink("Awaiting Approval", "reviews", new {ch=3})
                                        </li>
                                    </ul>
                                    <!-- /.nav-third-level -->
                                </li>
                          
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                       
                               }
                           }
                           }
                         </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
             



         @RenderBody()


        </div>
    <!-- jQuery -->
    <script src="~/Content/admin/bower_components/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Content/admin/bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <!-- DataTables JavaScript -->
    <script src="~/Content/admin/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/admin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="~/Content/admin/dist/js/sb-admin-2.js"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
    </script>

</body>

</html>
