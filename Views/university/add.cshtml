
@using studentshub.Models
@model IEnumerable<institute>
@{
    ViewBag.Title = "add";
}
@{ 
    Layout = "~/Views/Shared/_dashboards.cshtml";
    }
 
          
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Institute</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           Add Institute here
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form" name="institute" id="institute" action="/university/do_add"  method="post" enctype="multipart/form-data">
                                        <div class="form-group">
                                            @Html.Label("Institute Name");
                                            <input class="form-control" placeholder="Enter Name" name="name" id="name">
                                            <p class="help-block">e.g : PUCIT</p>
                                        </div>
                                        <div class="form-group">
                                             @Html.Label("Institute Category");
                                            <label class="checkbox-inline">
                                                <input type="checkbox" name="category" id="medical" value="medical">Medical
                                            </label>
                                            <label class="checkbox-inline">
                                                <input type="checkbox" name="category" id="engineering" value="engineering">Engineering
                                            </label>
                                            <label class="checkbox-inline">
                                                <input type="checkbox" name="category" id="IT" value="IT">IT
                                            </label>
                                            <label class="checkbox-inline">
                                                <input type="checkbox" name="category" id="business" value="business">Business
                                            </label>
                                        </div>
                                        
                                      
                                        <div class="form-group">
                                            @Html.Label("Upload Images");
                                            <input type="file" name="image" id="image" />
                                        </div>
                                        <div class="form-group">
                                            @Html.Label("Additional Information");
                                           
                                            @Html.TextBox("information", null,new { @class = "form-control", id="information", maxlength="50", rows="3"})
                                            
                                        </div>
                                       
                                        <div class="form-group">
                                            @Html.Label("Is a public sector institute?");
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="is_public" id="is_public1" value="1" checked>Yes
                                                </label>
                                            </div>
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" name="is_public" id="is_public2" value="0">No
                                                </label>
                                            </div>
                                        </div>
                                       
                                        <div class="form-group">
                                            @Html.Label("Location");
                                            <select class="form-control" name="location" id="location">
                                                <option>Select Location</option>
                                                <option>Lahore</option>
                                                <option>Karachi</option>
                                                <option>Islam Abad</option>
                                                <option>Peshawar</option>
                                                <option>Quetta</option>
                                                <option>Other</option>
                                            </select>
                                        </div>
                                       
                                        <button type="submit" class="btn btn-success">Add</button>
                                        <button type="reset" class="btn btn-default">Reset</button>
                                    </form>
                              
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

   